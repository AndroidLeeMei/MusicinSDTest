<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.auser.musicinsdtest.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="360dp"
        android:layout_height="42dp"
        android:text="Music Station"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031" />

    <Button
        android:id="@+id/pause"
        android:layout_width="74dp"
        android:layout_height="53dp"
        android:layout_marginLeft="-16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:text="PAUSE"
        app:layout_constraintLeft_toRightOf="@+id/prev"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/prev"
        android:layout_width="63dp"
        android:layout_height="53dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:text="PREV"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/stop"
        android:layout_width="66dp"
        android:layout_height="52dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="-8dp"
        android:text="STOP"
        app:layout_constraintLeft_toRightOf="@+id/pause"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/play"
        android:layout_width="64dp"
        android:layout_height="49dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:text="PLAY"
        app:layout_constraintLeft_toRightOf="@+id/stop"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/next"
        android:layout_width="67dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:text="NEXT"
        app:layout_constraintLeft_toRightOf="@+id/play"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="324dp"
        android:layout_height="306dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/prev"
        app:layout_constraintTop_toBottomOf="@+id/stop" />

</android.support.constraint.ConstraintLayout>
